{% endblock %}

 {% block body %}
                 <div class="col-md-12 profile-contain">
                     <div class="row">
                         <div class="col-md-12 col-xs-12">
                             <div class="content">

                                 <h3>Modifier une entreprise / <a href="{{path('liste_entreprise')}}">Liste des entreprises</a> </h3>
                                 {{ form_start(form,{'attr':{'action':path('modifier_entreprise',{ 'id': entreprise.id })}}) }}
                                 <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-xs-12">
                                     <label for="etudiant_nom">Nom de la Société</label>
                                     <div class="form-group">
                                         {{ form_widget(form.nomEntrep) }}
                                     </div>
                                     <label>Raison Sociale</label>
                                     <div class="form-group">
                                         {{ form_widget(form.raisonSoc) }}
                                     </div>
                                 </div>
                                 <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-xs-12">
                                     <label>Adresse</label>
                                     <div class="form-group">
                                         {{ form_widget(form.adresseEntrep) }}
                                     </div>
                                     <br>
                                     <div class="control-group">
                                         {{ form_widget(form.submit, { 'label': 'Sauvegarder' }) }}
                                     </div>
                                     {{ form_end(form) }}
                                     <br><br>
                                 </div>


                             </div>
                         </div>
                     </div>
                 </div>
 {% endblock %}


