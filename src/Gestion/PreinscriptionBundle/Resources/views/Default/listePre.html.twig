{% extends '::base.html.twig' %}

{% block body %}
    <h1>Liste des préinscrits :</h1>
<table class="table">
<thead>
<tr>
    <th>Nom</th>
    <th>Prenom</th>
    <th>DateNaissance</th>
    <th>LieuNaissance</th>
    <th>Ville</th>
    <th>Sexe</th>
    <th>Action</th>
</tr>
</thead>
{% for pre in preinscrits %}
        <tbody>
        <tr>
            <td><a href="{{ path('infosPreEtudiant', { 'id': pre.id }) }}">{{ pre.nom }}</a></td>
            <td>{{ pre.prenom }}</td>
            <td>{{ pre.dateNaissance|date("m/d/Y", false) }}</td>
            <td>{{ pre.lieuNaissance }}</td>
            <td>{{ pre.ville }}</td>
            <td>{{ pre.sexe }}</td>
            <td><a href="{{ path('valider_preinscrit',{ 'id': pre.id }) }}"><button class="btn btn-success">Valider</button></a><a href="{{ path('suprimerPreinscrit',{'id':pre.id}) }}"><button class="btn btn-danger">Supprimer</button></a>
        </tr>
{% else %}
    <p>Aucune préinscrit n'a été trouvée.</p>
{% endfor %}
        </tbody>
</table>

{% endblock %}


