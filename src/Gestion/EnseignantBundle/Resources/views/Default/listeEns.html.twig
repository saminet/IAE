{% extends '::base.html.twig' %}

{% block body %}
    <h1>Liste des enseignants :</h1>
<table class="table">
<thead>
<tr>
    <th>Nom</th>
    <th>Prenom</th>
    <th>DateNaissance</th>
    <th>LieuNaissance</th>
    <th>Ville</th>
    <th>Sexe</th>
    <th>Action</th>
</tr>
</thead>
{% for ens in enseignant %}
        <tbody>
        <tr>
            <td><a href="{{ path('infos_Enseignant',{ 'id': ens.id }) }}">{{ ens.nom }}</a></td>
            <td>{{ ens.prenom }}</td>
            <td>{{ ens.dateNaissance|date("m/d/Y", false) }}</td>
            <td>{{ ens.lieuxNaissance }}</td>
            <td>{{ ens.ville }}</td>
            <td>{{ ens.sexe }}</td>
            <td><a href="{{ path('modifier_Enseignant',{ 'id': ens.id }) }}"><button class="btn btn-success">Modifier</button></a><a href=""><button class="btn btn-danger">Supprimer</button></a>
        </tr>
{% else %}
    <p>Aucun enseignant n'a été trouvé.</p>
{% endfor %}
        </tbody>
</table>

{% endblock %}


